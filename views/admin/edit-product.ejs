<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <div class="container">
            <%- include('../includes/navigation.ejs') %>
                <main>
                    <form class="product-form" action="<% if(editing){ %>/update-product<%}else {%>/add-product<%}%>" method="POST">
                        <div class="form-control">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title" value="<% if(editing){ %><%= product.title %><%}%>" autofocus>
                        </div>
                        <div class="form-control">
                            <label for="imageUrl">Image</label>
                            <input type="text" id="imageUrl" value="<% if(editing){ %><%= product.imageUrl %><%}%>" name="imageUrl" id="imageUrl">
                        </div>
                        <div class="form-control">
                            <label for="price">Price</label>
                            <input type="text" value="<% if(editing){ %><%= product.price %><%}%>" name="price" id="price">
                        </div>
                        <div class="form-control">
                            <label for="shortDesc">Description</label>
                            <textarea name="shortDesc" id="shortDesc" cols="30" rows="10"><% if(editing){ %><%= product.description %><%}%></textarea>
                        </div>
                        <% if(editing){ %>
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <%}%>
                                <button class="btn" type="submit"><% if(editing){ %> Edit Product <%}else {%> Add Product <%} %></button>
                    </form>
                </main>
        </div>
        <%- include('../includes/footer.ejs') %>